<% title "Admin - #{@fellow.last_name}" %>

<div class="container">

    <h3><%= @fellow.name %></h3>

    <div class="container">
      <%= link_to "Edit", edit_admin_fellow_path(@fellow.id), :class => "button is-warning", :id => "fellow-edit-button" %>
      <%= link_to "Delete", admin_fellow_path(@fellow.id), method: :delete, confirm: "Are you sure you want to delete this Class?", :class => "button is-danger is-outlined" %>
    </div>

    <table style="width:100%">
      <tr>
        <td>Name</td><td><%= @fellow.try :name %></td>
      </tr>
      <tr>
        <td>Year</td><td><%= @fellow.try :year %></td>
      </tr>
      <tr>
        <td>Updated at</td><td><%= @fellow.updated_at.strftime("%B %e, %Y") %></td>
      </tr>
      <% if false %>
      <tr>
        <td>Fellows</td><td><%= @fellow.fellows.count %></td>
      </tr>
        <% end %>
    </table>
  </div>
</div>
