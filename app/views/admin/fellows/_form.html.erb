<% f = form %>

<%= render 'shared/error_messages', object: f.object %>

<div class="container">

  <label class="label">First Name</label>
  <p class="control">
    <%= form.text_field :first_name, placeholder: "Ross" %>
  </p>
  <label class="label">Last Name</label>
  <p class="control">
    <%= form.text_field :last_name, placeholder: "Kelly" %>
  </p>
  <label class="label">Email</label>
  <p>To recieve Cansbridge updates, newsletters, and events</p>
  <p class="control">
    <%= form.text_field :email, placeholder: "ross@boss.ca" %>
  </p>
  <label class="label">Email</label>
  <p>Other email (secondary, company email)</p>
  <p class="control">
    <%= form.text_field :email, placeholder: "ross@company.ca" %>
  </p>

</div>

  <p class="control">
    <%= form.submit "Submit", :class => "button is-info" %>
  </p>

  <div class="row">
    <div class="large-12 columns">
      <%= f.label "Name - First Name Only" %>
      <%= f.text_field "name", readonly: readonly %>
    </div>
    <div class="large-12 columns">
      <%= f.label "github url" %>
      <%= f.text_field "github", readonly: readonly %>
    </div>
    <div class="large-12 columns">
      <%= f.label "linkedin url" %>
      <%= f.text_field "linkedin", readonly: readonly %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <% unless readonly %>
        <%= label_tag :image, "Profile Image" %>
        <% if @project_member.image? %>
        <div class="alumni-img">
          <%= image_tag @project_member.image.medium, data: { 'no-retina' => ''}  %>
        </div>
        <% end %>
        <%= f.file_field :image %>
      <% end %>
    </div>
  </div>

  <% if readonly %>
    <div class="row">
      <% if @project_member.image? %>
        <div class="large-12 columns">
          <%= image_tag @almuni.image_url, data: { 'no-retina' => ''}  %>
        </div>
      <% end %>
    </div>
  <% end %>
